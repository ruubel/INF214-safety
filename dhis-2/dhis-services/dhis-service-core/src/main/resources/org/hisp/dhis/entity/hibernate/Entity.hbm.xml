<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
  [<!ENTITY identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm">]
  >

<hibernate-mapping>
  <class name="org.hisp.dhis.entity.Entity" table="entity">

    <cache usage="read-write" />

    <id name="id" column="entityid">
      <generator class="native" />
    </id>
    &identifiableProperties;

    <property name="name" column="name" not-null="true" unique="true" length="230" />

    <!-- Object Translation -->
    <set name="translations" table="entitytranslations" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="entityid" foreign-key="fk_objecttranslation_entityid" />
      <many-to-many class="org.hisp.dhis.translation.ObjectTranslation" column="objecttranslationid" unique="true" />
    </set>

    <!-- Access properties -->
    <many-to-one name="user" class="org.hisp.dhis.user.User" column="userid" foreign-key="fk_entity_userid" />

    <property name="publicAccess" length="8" />

    <set name="userGroupAccesses" table="entityusergroupaccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="entityid" />
      <many-to-many class="org.hisp.dhis.user.UserGroupAccess" column="usergroupaccessid" unique="true" />
    </set>

    <set name="userAccesses" table="entityuseraccesses" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="entityid" />
      <many-to-many class="org.hisp.dhis.user.UserAccess" column="useraccessid" unique="true" />
    </set>

    <!-- Dynamic attribute values -->
    <set name="attributeValues" table="entityattributevalues" cascade="all-delete-orphan">
      <cache usage="read-write" />
      <key column="entityid" />
      <many-to-many class="org.hisp.dhis.attribute.AttributeValue" column="attributevalueid" unique="true" />
    </set>

  </class>

</hibernate-mapping>
